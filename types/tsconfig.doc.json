{
    "compilerOptions": {
        "lib": ["ES2022", "dom"],
        "noImplicitAny": true
    },
    "typedocOptions": {
        "name": "txiki.js",
        "entryPoints": [ "src/" ],
        "entryPointStrategy": "expand",
        "out": "../dist/website/api/",
        "readme": "intro.md",
        "disableSources": true,
        "exclude":["src/index.d.ts"],
        "treatWarningsAsErrors": true
    },
    "watchOptions": {
        "excludeDirectories": ["api/*"]
    }
}
